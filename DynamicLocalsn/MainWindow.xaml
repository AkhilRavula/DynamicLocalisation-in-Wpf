<Window x:Class="DynamicLocalsn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicLocalsn"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Menu>
            <MenuItem Header="{DynamicResource strMenu}">
                <MenuItem Header="{DynamicResource strEng}" IsCheckable="True" Click="MenuItem_Click"/>
                <MenuItem Header="{DynamicResource strSpan}" IsCheckable="True" Click="MenuItem_Click_1"/>
            </MenuItem>
        </Menu>
        <TextBlock Width="200" Height="100" Text="{DynamicResource strName}"/>
    </StackPanel>
</Window>
